<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_popularhotel"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_img"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/haian"></ImageView>

        <TextView
            android:id="@+id/rate_popularhotel"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>
        <TextView
            android:id="@+id/name_popularhotel"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </TextView>
        <TextView
            android:id="@+id/location_popularhotel"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>
    </LinearLayout>

</RelativeLayout>